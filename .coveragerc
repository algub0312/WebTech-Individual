# .coveragerc - Configuration file for coverage.py
# This file tells coverage which files to measure and which to ignore

[run]
# Specify which files to include in coverage measurement
source = shelter

# Omit specific files or patterns from coverage
omit = 
    */migrations/*
    */tests/*
    */test_*.py
    */__init__.py
    */apps.py
    */admin.py
    manage.py
    */settings.py
    */wsgi.py
    */asgi.py

[report]
# Exclude lines from coverage reporting
# These are lines that coverage shouldn't count as "not covered"
exclude_lines =
    # Standard pragma to exclude specific lines
    pragma: no cover
    
    # Don't complain about missing debug-only code
    def __repr__
    
    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    
    # Don't complain about abstract methods
    @abstract

[html]
# Directory where HTML coverage report will be generated
directory = htmlcov